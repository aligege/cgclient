{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "\"D:/Program Files/Microsoft Visual Studio/2022/Community/Common7/Tools/VsDevCmd.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\build\\debug\\cgclient.exe",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/lib/*.c",
                "/I",
                "${workspaceFolder}",
                "/I",
                "${workspaceFolder}\\third_party",
                "/I",
                "${workspaceFolder}\\include\\v8",
                "/link",
                "/LIBPATH:${workspaceFolder}\\lib\\GLFW\\vs2022-x64",
                "/LIBPATH:${workspaceFolder}\\lib\\v8\\win-x64\\debug",
                "-l",
                "glfw3.lib",
                "-l",
                "glfw3dll.lib",
                "-l",
                "v8.dll.lib",
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}